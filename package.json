{
  "name": "bini-game-town",
  "private": true,
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com-sb:seongbiny/biniGameTown.git",
  "author": "seongbiny <s30ngb1n@gmail.com>",
  "license": "MIT",
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "dev": "concurrently -n web,puzzle,flappy,typo \"pnpm dev:web\" \"pnpm dev:puzzle\" \"pnpm dev:flappy\" \"pnpm dev:typo\"",
    "dev:web": "pnpm --filter @bini-game-town/web dev",
    "dev:puzzle": "pnpm --filter @bini-game-town/bini-puzzle dev",
    "dev:flappy": "pnpm --filter @bini-game-town/flappy-plane dev",
    "dev:typo": "pnpm --filter @bini-game-town/typo-trap dev",
    "prebuild": "mkdir -p dist/game/bini-puzzle dist/game/flappy-plane dist/game/typo-trap",
    "build": "pnpm build:games && pnpm build:web",
    "build:games": "pnpm -r --filter './packages/game/*' build",
    "build:web": "pnpm --filter @bini-game-town/web build",
    "preview": "pnpm --filter @bini-game-town/web preview",
    "lint": "pnpm -r --parallel run lint"
  },
  "devDependencies": {
    "@edenyun/eslint-config": "^1.0.4",
    "@edenyun/prettier-config": "^1.0.2",
    "concurrently": "^9.2.1",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2"
  }
}
